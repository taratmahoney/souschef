<div class="user-name">
  <h2> <%= @user.display_name %> </h2>
</div>

<div class="user-avatar">
  <% if @user.avatar %>
    <img src="<%= @user.avatar %>"/>
  <% else %>
    <img src="/assets/default-user.png"/>
  <% end %>
</div>

<div class="user_recipes">
  <% if @user.recipes %>
    <% @user.recipes.each do |recipe| %>
      <div class="recipe-list-item">
        <div class="recipe-list-image">
         <%= image_tag(recipe.image) %>
        </div>

       <div class="recipe-list-name">
          <h4><%= link_to recipe.name, "/recipes/#{recipe.id}" %>
          </h4>
        </div>
      <% end %>
  <% else %>
     <p> There are no recipes here...yet. </p>

  <% end %>    
</div>

