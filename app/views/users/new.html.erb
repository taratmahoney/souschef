<h2>Create an account</h2>

<%= form_for @user do |f| %>
  
  <div class="field">
  <%= f.label :email %> 
  <%= f.text_field :email %><br/>
  </div>

  <div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %><br/>
  </div>

  <div class="field">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br/>
  </div>

  <div class="action">
  <%= f.submit %>
  </div>
<% end %>