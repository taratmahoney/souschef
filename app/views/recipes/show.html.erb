<script type="text/javascript" src="https://rawgithub.com/hiddentao/google-tts/master/google-tts.min.js"></script>

<div class="recipe-image">
  <%= image_tag(@recipe.image) %>
</div>
<button class="prev-step"> &lt;&lt; Read prev step </button>
<button class="next-step"> Read next step &gt;&gt; </button>

<div class="recipe">
    <h1><%= @recipe.name %></h1>

    <p><%= @recipe.description %></p>

    <p>Cooking time: <%= @recipe.time %> hours</p>

    <!-- <button class="read"> Read it! </button> -->

    <button class="prev-step"> &lt;&lt; Read prev step </button>
    <button class="next-step"> Read next step &gt;&gt; </button>

    </br>
    <div id="speaker"></div>


    <div class="ingredients">

      <p>Ingredients: </p>
        <% @recipe.ingredients.each do |ingredient| %>
          <%= pluralize(ingredient.number, ingredient.unit) %>
          <%= ingredient.name %></br>
        <% end %>
    </div>


    <div class="steps">

      <p>Steps:</p>

        <% @recipe.steps.each do |step| %>
        <p class="step-content" id="step<%= step.number %>">
         <%= step.content %>
        </p>
      <% end %>
    </div>

    <%= link_to "Edit Recipe", edit_recipe_path %>
</div>
